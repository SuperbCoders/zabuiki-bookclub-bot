[Unit]
Description=Celery Beat Service
After=network.target

[Service]
Type=simple
User=manager
EnvironmentFile=/etc/systemd/system/bot.env
User=manager
WorkingDirectory=/home/manager/zabuiki-bookclub-bot/bookclub
ExecStart=/bin/sh -c '/home/manager/.local/bin/celery beat  \
  -A bookclub --pidfile=/var/run/celery/beat.pid \
  --logfile=/var/log/celery/beat.log --loglevel=DEBUG -S django'

[Install]
WantedBy=multi-user.target